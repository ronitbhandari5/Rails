
<%= simple_form_for article do |form| %>
  <%= form.input :title, label: 'title', error: 'title is mandatory, please specify one' %>
  <%= form.input :body, as: :text %>
  <%= form.input :status, collection: ['public', 'private', 'archived'], include_blank: false %>
  <%= form.button :submit, class: "btn-custom" %>
<% end %>
